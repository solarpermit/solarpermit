{% if user.is_authenticated() %}
       {% if question.user_can_suggest %}
       <div class="field_mo_l1 editicon" style="vertical-align:middle;" id="edit_question_{{question_id}}" title="{{question['terminology']}}" onclick="controller.suggestionField.clickAddLabel({{jurisdiction_id}}, {{question_id}});">
       </div>
       ·
       {% endif %}
       {% if category == 'favorite_fields' %}
           <a class="remove_from_favorites comments" data-id="{{question_id}}" data-jid="{{jurisdiction_id}}" id="favorite_field_{{question_id}}" >Unfavorite</a>
       {% else %}
           {% if question_id not in favorite_questions %}
               <a class="add_to_favorites comments" data-id="{{question_id}}" data-jid="{{jurisdiction_id}}" id="favorite_field_{{question_id}}" >Favorite</a>
           {% else %}
	       Unfavorite
           {% endif %}
       {% endif %}
       ·
       <a class="comments need_comment"
          href="#"
          data-id="{{answer['id']}}"
          data-jid="{{jurisdiction.id}}"
          id="answer_comment_{{answer['id']}}">
         Comment
       </a>
       ·
{% endif %}
